<div class="container page-container">
  <div class="row">
    <div class="col-md-12">
      <h3>Your Navigation Items</h3>
      <%= link_to "Create New Navigation Item", new_navigation_item_path, class:"btn btn-primary" %>
    </div>
    <table>
      <tr>
        <th>
          Navigation Item Title
        </th>
        <th>
          Edit Navigation Item
        </th>
      </tr>
      <% @navigation_items.each do |n| %>
          <tr>
            <td>
              <%= n.title %>
            </td>
            <td>
              <%= link_to "Edit", edit_navigation_item_path(n), class: "btn btn-default" %>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>